<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/transparent">

    <!-- Jenis Korban -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis Korban"
        android:textStyle="bold"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvJenisKorban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="6dp" />

    <!-- Nama -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textStyle="bold"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvNamaKorban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="6dp" />

    <!-- Jenis Kelamin -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"
        android:textStyle="bold"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvJkKorban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="6dp" />

    <!-- Usia -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usia"
        android:textStyle="bold"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvUsiaKorban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="6dp" />

    <!-- Kondisi Fisik -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kondisi Fisik"
        android:textStyle="bold"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvKondisiFisikKorban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="6dp" />

    <!-- NIK -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIK"
        android:textStyle="bold"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvNikKorban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="6dp" />

    <!-- KK -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No KK"
        android:textStyle="bold"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvKkKorban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="6dp" />

    <!-- TTL -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tempat, Tanggal Lahir"
        android:textStyle="bold"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvTtlKorban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="6dp" />

    <!-- Alamat -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textStyle="bold"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvAlamatKorban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="12dp" />

    <!-- Ciri - Ciri -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ciri - ciri"
        android:textStyle="bold"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvCiriciri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="12dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD"
        android:layout_marginTop="6dp" />
</LinearLayout>
