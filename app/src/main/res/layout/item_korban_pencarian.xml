<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Baris atas: Spinner Jenis Korban + Hapus -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="6dp">

            <Spinner
                android:id="@+id/spinnerJenisKorban"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/bg_spinner_default" />

            <ImageButton
                android:id="@+id/btnHapusKorban"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Hapus korban"
                android:src="@drawable/ic_exit"
                android:background="?android:selectableItemBackgroundBorderless"/>
        </LinearLayout>

        <!-- Nama -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/etNamaKorban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Nama korban"
            android:inputType="textPersonName"
            android:padding="8dp" />

        <!-- Jenis Kelamin -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis kelamin"
            android:paddingTop="8dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgJenisKelamin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbLaki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laki-laki" />

            <RadioButton
                android:id="@+id/rbPerempuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perempuan"
                android:layout_marginStart="16dp" />
        </RadioGroup>

        <!-- etJK hidden -->
        <EditText
            android:id="@+id/etJK"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:inputType="text" />

        <!-- Usia -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usia"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/etUsiaKorban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Usia"
            android:inputType="number"
            android:padding="8dp" />

        <!-- Kondisi Fisik -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kondisi fisik"
            android:paddingTop="8dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgKondisiFisik2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbSehat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sehat" />

            <RadioButton
                android:id="@+id/rbKebutuhanKhusus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kebutuhan Khusus"
                android:layout_marginStart="16dp" />
        </RadioGroup>

        <!-- spinner kondisi hidden -->
        <Spinner
            android:id="@+id/spinnerKondisiFisik"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- NIK -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIK"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/etNIKKorban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Nomor NIK"
            android:inputType="number"
            android:padding="8dp" />

        <!-- KK -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor KK"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/etKKKorban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Nomor KK"
            android:inputType="number"
            android:padding="8dp" />

        <!-- TTL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempat, Tanggal Lahir"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/etTTL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh : Purwakarta, 1 Januari 2000"
            android:inputType="text"
            android:padding="8dp" />

        <!-- Alamat -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/etAlamatKorban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Alamat"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:padding="8dp" />

        <!-- Ciri-ciri -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciri - ciri"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/etCiriciri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Ciri - ciri"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:padding="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
