<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header + tombol hapus -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnHapusSaksi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Hapus saksi"
                android:src="@drawable/ic_exit"
                android:background="?android:selectableItemBackgroundBorderless"/>
        </LinearLayout>

        <!-- Nama -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Saksi"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etNamaSaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama saksi"
            android:inputType="textPersonName"/>

        <!-- Jenis Kelamin -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:textStyle="bold"
            android:paddingTop="8dp"/>
        <RadioGroup
            android:id="@+id/rgJkSaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbSaksiL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laki-laki"/>
            <RadioButton
                android:id="@+id/rbSaksiP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perempuan"
                android:layout_marginStart="16dp"/>
        </RadioGroup>

        <!-- Umur -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Umur"
            android:textStyle="bold"
            android:paddingTop="8dp"/>
        <EditText
            android:id="@+id/etUmurSaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan umur saksi"
            android:inputType="number"/>

        <!-- No HP -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No HP"
            android:textStyle="bold"
            android:paddingTop="8dp"/>
        <EditText
            android:id="@+id/etNoHpSaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nomor HP saksi"
            android:inputType="phone"/>

        <!-- Alamat -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textStyle="bold"
            android:paddingTop="8dp"/>
        <EditText
            android:id="@+id/etAlamatSaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan alamat saksi"
            android:inputType="textMultiLine"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
